@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Подтверждение регистрации";
}

<h2>@ViewData["Title"]</h2>
<form id="registerForm" method="post">
    <p>Введите код полученный на номер: @Model.PhoneNumber</p>
    <div class="form-group">
        <label asp-for="Input.Code" class="control-label"></label>
        <input asp-for="Input.Code" minlength="4" , maxlength="4" class="form-control" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Подтвердить" class="btn btn-primary" />
    </div>
</form>
