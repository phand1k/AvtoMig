@model IEnumerable<MainWebApplication.Areas.Wash.Models.SubmitWash>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div >
        @using (Html.BeginForm("ListOfCompleteWashes", "Director", FormMethod.Get))
        {
            @Html.RadioButton("searchBy", "Гос номер авто", true, new {@class ="form-check-input"})<text>Гос номер авто</text>
            @Html.RadioButton("searchBy", "Марка", true, new {@class ="form-check-input"})
            <text>Марка</text>
            @Html.TextBox("search", null, new {@class="form-control"})<input class="btn-primary" type="submit" value="Поиск" />
        }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WashOrder.CarNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WashOrder.Cars.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SummServices)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WashOrder.CarNumber)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.WashOrder.Cars.Name)
                @Html.DisplayFor(modelItem => item.WashOrder.ModelCar.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SummServices)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="DetailsOfCompleteAuto" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
