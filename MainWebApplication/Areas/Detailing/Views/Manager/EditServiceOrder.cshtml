@model MainWebApplication.Areas.Detailing.Models.ServiceOrder

<h4>Редактирование заказ-наряда</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
             <input type="hidden" asp-for="IsDeleted" />
              <input type="hidden" asp-for="AspNetUserId" />
              <input type="hidden" asp-for="OrganizationId" />
              <input type="hidden" asp-for="DateOfCreateServiceOrder" />
              <input type="hidden" asp-for="StatusId" />
              <input type="hidden" asp-for="Salary" />
              <input type="hidden" asp-for="ServiceOrderPrice" />
             <div class="form-group">
                <label asp-for="AspNetUserId" class="control-label"></label>
                <select asp-for="AspNetUserId" class="form-control" asp-items="ViewBag.Users"></select>
                <span asp-validation-for="AspNetUserId" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.Services"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="SalaryMaster" class="control-label"></label>
                <input asp-for="SalaryMaster" class="form-control" />
                <span asp-validation-for="SalaryMaster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Редактировать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ServicesList">Назад в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
