@model MainWebApplication.Models.ModelCar

<h4>Редактирование модели машины</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditModelCar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
             <input type="hidden" asp-for="IsDeleted" />
             <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <select id="CarId"  asp-for="CarId" class ="form-control" asp-items="ViewBag.CarId" >
                    <option selected>
                        Выберите марку авто
                    </option>
                    </select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Редактировать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ServicesList">Назад в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
