@using Microsoft.AspNetCore.Identity
@using MainWebApplication.Areas.Identity.Data
@inject SignInManager<AspNetUser> SignInManager
@inject UserManager<AspNetUser> UserManager
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        string? userName = UserManager.GetUserAsync(User).Result.FirstName +
            " "
            + UserManager.GetUserAsync(User).Result.LastName;

    <li class="nav-item dropdown pe-3">

          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
            <img src="~/img/profile-img.jpg" alt="Профиль" class="rounded-circle">
            <span class="d-none d-md-block dropdown-toggle ps-2">@userName</span>
          </a><!-- End Profile Iamge Icon -->

          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
            <li class="dropdown-header">
              <h6>
                  @userName
              </h6>
              <span>Место для роли</span>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="/Home/Profile">
                <i class="bi bi-person"></i>
                <span>Мой профиль</span>
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="/Identity/Account/Manage/AcceptProfile">
                <i class="bi bi-question-circle"></i>
                <span>Вы владелец данной организации?</span>
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>
              <li>
              <a class="dropdown-item d-flex align-items-center" href="/Identity/Account/Logout">
                <i class="bi bi-box-arrow-right"></i>
                 <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                     <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Выход</button>
                </form>
              </a>
            </li>

          </ul><!-- End Profile Dropdown Items -->
        </li>
   
}
</ul>
