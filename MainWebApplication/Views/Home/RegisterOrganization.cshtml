@model MainWebApplication.Areas.Identity.Data.Organization

<h4>Создайте организацию для работы в несколько кликов</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterOrganization">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="TypeOrganizationId" class="control-label"></label>
                <select id="TypeOrganizationId"  asp-for="TypeOrganizationId" class ="form-control" asp-items="ViewBag.TypeOfOrganization" >
                    <option selected>
                        Выберите деятельность организации
                    </option>
                    </select>
                <span asp-validation-for="TypeOrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullOrganizationName" class="control-label"></label>
                <input asp-for="FullOrganizationName" class="form-control" />
                <span asp-validation-for="FullOrganizationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationNumber" class="control-label"></label>
                <input asp-for="OrganizationNumber" class="form-control" />
                <span asp-validation-for="OrganizationNumber" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
