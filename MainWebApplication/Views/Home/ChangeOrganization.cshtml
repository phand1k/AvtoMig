@model MainWebApplication.Areas.Identity.Data.AspNetUser

<h4>Редактирование организации</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeOrganization">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
             <input type="hidden" asp-for="IsDeleted" />
              <input type="hidden" asp-for="DateOfCreated" />
              <input type="hidden" asp-for="PhoneNumberConfirmed" />
               <input type="hidden" asp-for="Email" />
               <input type="hidden" asp-for="LockoutEnabled" />
               <input type="hidden" asp-for="LockoutEnd" />
              <input type="hidden" asp-for="EmailConfirmed" />
              <input type="hidden" asp-for="PasswordHash" />
              <input type="hidden" asp-for="UserName" />
              <input type="hidden" asp-for="NormalizedEmail" />
              <input type="hidden" asp-for="NormalizedUserName" />
              <input type="hidden" asp-for="OrganizationId" />
              <input type="hidden" asp-for="ConcurrencyStamp" />
              <input type="hidden" asp-for="SecurityStamp" />
              <input type="hidden" asp-for="TwoFactorEnabled" />
              <input type="hidden" asp-for="AccessFailedCount" />
              <input type="hidden" asp-for="FirstName" />
              <input type="hidden" asp-for="LastName" />
              <input type="hidden" asp-for="PhoneNumber" />
            <div class="form-group">
                <label asp-for="OrganizationNumber" class="control-label"></label>
                <input asp-for="OrganizationNumber"  minlength = "12", maxlength = "12" class="form-control" />
                <span asp-validation-for="OrganizationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Редактировать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ServicesList">Назад в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
